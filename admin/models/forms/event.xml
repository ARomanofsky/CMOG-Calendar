<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/administrator/components/com_cmogcal/models/rules"
>
        <fieldset name="details">
                <field
                        name="EventText"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_TITLE_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_TITLE_DESC"
                        size="95"
                        class="inputbox"
                        required="true"
                        default=""
                 />
        <!--  `Class` char(8) NOT NULL, -->
                <field
                        name="Class"
                        type="list"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_CLASS_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_CLASS_DESC"
                        size="1"
                        class="inputbox"
                        required="true"
                        default="evt"
				>
                        <option value="gf">Great Feast</option>
                        <option value="lf">Lesser Feast</option>
                        <option value="saint">Feast such a Saint day (not on month view)</option>
                        <option value="evt">Event</option>
                        <option value="ser">Service</option>
                        <option value="read">Reading</option>
                        <option value="fast">Fast day</option>
                        <option value="fastfree">Fast Free day</option>
                        <option value="memory">Parish Bulletin Memory (not on month view)</option>
                        <option value="health">Parish Bulletin Health (not on month view)</option>
                 </field>
				  <field
                        name="catid"
                        type="category"
                        extension="com_cmogcal"
                        class="inputbox"
                        default="309"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_CATID_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_CATID_DESC"
                        required="true"
                >
                        <option value="0">JOPTION_SELECT_CATEGORY</option>
                </field>
 
				 <field
                        name="Year"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_YEAR_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_YEAR_DESC"
                        size="4"
                        class="inputbox"
                        required="true"
                 />
				 <field
                        name="Month"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_MONTH_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_MONTH_DESC"
                        size="2"
                        class="inputbox"
                        required="true"
                 />
				 <field
                        name="Day"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_DAY_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_DAY_DESC"
                        size="2"
                        class="inputbox"
                        required="true"
                 />
				 
						 <!--  `access`  -->
						 <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
							 description="JFIELD_ACCESS_DESC" class="inputbox" size="1" />
							 
				 <field
                        name="Link"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_URL_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_URL_DESC"
                        size="95"
                        class="inputbox"
                 />
        <!--  `popup` char(4) DEFAULT NULL COMMENT 'pop up flag', -->
                <field
                        name="popup"
                        type="list"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_POPUP_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_POPUP_DESC"
                        size="1"
                        class="inputbox"
                        default=""
				 >	
                        <option value=""> (do not pup-up) </option>
                        <option value="locp">local cp</option>
                 </field>
				 <field
                        name= "icon" 
                        type="media"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_ICONURL_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_ICONURL_DESC"
                        directory="Icons/Feasts/thumbnails"
                        class="inputbox"
                 />
				 <field
                        name="hymn"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_HYMNURL_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_HYMNURL_DESC"
                        size="95"
                        class="inputbox"
                 />
				 <field name="published" type="list" label="JSTATUS"
			             description="JFIELD_PUBLISHED_DESC" class="inputbox"
			             filter="intval" size="1" default="1"
		            >
		  	             <option value="1">JPUBLISHED</option>
			             <option value="0">JUNPUBLISHED</option>
			             <option value="2">JARCHIVED</option>
			             <option value="-2">JTRASHED</option>
		          </field>
				 <field
                        name="listorder"
                        type="text"
                        label="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_ORDERING_LABEL"
                        description="COM_CMOGCAL_CMOGCAL_FIELD_EVENT_ORDERING_DESC"
                        size="10"
                        class="inputbox"
                        required="true"
                        default="50"
                 />
                        <field type="spacer"
                         name="myspacer"
                         label="Event record info:"
                />
	  	       <field name="ID"  
			          type="text" 
					  class="readonly" 
					  label="JGLOBAL_FIELD_ID_LABEL"
			          description ="JGLOBAL_FIELD_ID_DESC" 
					  size="10" 
					  default="0"
			          readonly="true"  
			   />
				<field type="spacer" name="myspacer" hr="true" />
				<field         name="gmd"
                                type="list"
                                label="COM_CMOGCAL_CMOGCAL_FIELD_TEMPLATE_LABEL"
                                description="COM_CMOGCAL_CMOGCAL_FIELD_TEMPLATE_DESC"
			                    readonly="true" 
                               default="0"
                        >
                                <option value="-5">Pascha</option>
                                <option value="-4">Triodion</option>
                                <option value="-3">Luke</option>
                                <option value="-2">Pentecost</option>
                                <option value="-1">Movable</option>
                                <option value="0">(none)</option>
                 </field>
	  	       <field name="tmplt_id"  
			          type="text" 
					  class="readonly" 
					  label="COM_CMOGCAL_CMOGCAL_FIELD_TMPLTID_LABEL"
			          description ="COM_CMOGCAL_CMOGCAL_FIELD_TMPLTID_DESC" 
					  size="10" 
					  default="0"
			          readonly="true"  
			   />
				<field
                        name="created_by"
                        type="hidden"
                />
				
		<field name="created_by" type="user"
			label="COM_CONTENT_FIELD_CREATED_BY_LABEL" description="COM_CONTENT_FIELD_CREATED_BY_DESC" />

				<field name="created" type="calendar" label="COM_CONTENT_FIELD_CREATED_LABEL"
			description="COM_CONTENT_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_CONTENT_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
		 />
        </fieldset>
        <fields name="params">
                <fieldset
                        name="params"
                        label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
                >
                        <field
                                name="show_category"
                                type="list"
                                label="COM_CMOGCAL_CMOGCAL_FIELD_SHOW_CATEGORY_LABEL"
                                description="COM_CMOGCAL_CMOGCAL_FIELD_SHOW_CATEGORY_DESC"
                                default=""
                        >
                                <option value="">JGLOBAL_USE_GLOBAL</option>
                                <option value="0">JHIDE</option>
                                <option value="1">JSHOW</option>
                        </field>
                </fieldset>
        </fields>
    <fieldset name="accesscontrol">
        <field name="asset_id" type="hidden" filter="unset" />
        <field name="rules"
                type="rules"
                label="JFIELD_RULES_LABEL"
                translate_label="false"
                filter="rules"
                validate="rules"
                class="inputbox"
                component="com_cmogcal"
                section="event"
        />
    </fieldset>
</form>